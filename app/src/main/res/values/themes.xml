<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CocktailTestApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryVariant">@color/appColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="header">
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="radio">
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/radio_text_color_state</item>
    </style>

    <style name="RadioButtonTheme">
        <item name="colorControlActivated">@color/appColor</item>
        <item name="colorControlNormal">@color/radio_not_selected</item>
    </style>

    <style name="circleImageView" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="item_text">
        <item name="android:lines">1</item>
        <item name="singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="item_desc">
        <item name="android:lines">1</item>
        <item name="singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/radio_not_selected</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>